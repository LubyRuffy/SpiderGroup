


    <div id="home">
      <% @contents.each {|c|%>
          <div class="feeds-item">
          <h3><a href="/view/<%=c.id%>" target="_blank" class="feeds-item-more"><%=c.title%></a></h3>
          <div class="feeds-item-detail clearfix ">
                    <% if c.cover %>
           <p class="feeds-item-pic"><a href="<% c.url %>" target="_blank" class="feeds-item-more"><img src="/<%=c.cover%>"></a></p>
                    <% end %>
                    <p class="feeds-item-text"><%=c.description%><a href="/view/<%=c.id%>" target="_blank" class="feeds-item-more">[详细]</a></p>
                 <p class="feeds-item-info">
                    <span><%=c.created_at%></span>
             </div>
           </div>
      <% } %>
    </div>
    <!-- 分页链接 -->
    <div class="pull-right pages">
      <%=will_paginate(@contents, :prev_label=>'Previous', :next_label=>'Next', :separator=>" | ") %>  
    </div>



